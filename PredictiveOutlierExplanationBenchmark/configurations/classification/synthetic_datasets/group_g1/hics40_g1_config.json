{
  "settings": {
    "task": "classification",
    "test_size": 0.2,
    "kfolds": 5,
    "repetitions": 10,
    "top_k_points_to_explain": 0.05,
    "pseudo_samples_per_outlier": [0, 1, 3, 5]
  },

  "dataset": {
    "path": "../datasets/synthetic/hics/group_g1/hics_40_g1.csv",
    "is_anomaly_column": "is_anomaly",
    "subspace_column": "subspaces"
  },

  "detectors": [
    {
      "id": "iforest",
      "params": {
        "max_samples": 256,
        "n_estimators": 100
      }
    },
    {
      "id": "lof",
      "params": {
        "n_neighbors": 15
      }
    },
    {
      "id": "sod",
      "params": {
        "n_neighbors": 15,
        "ref_set": 10,
        "alpha": 0.8
      }
    }
  ],

  "feature_selection": [
    {
      "id": "none",
      "params": {}
    },
    {
      "id": "ses",
      "params": {
        "max_k": [2, 3],
        "alpha": [0.05, 0.1, 0.2]
       }
    },
    {
      "id": "fbed",
      "params": {
        "K": [3, 5, 7],
        "threshold": [0.05, 0.1, 0.2]
      }
    },
    {
      "id": "lasso",
      "params":{
        "alpha": [0.001, 0.01, 0.1, 0.2, 0.25]
      }
    }
  ],

  "classifiers": [
    {
      "id": "rf",
      "params": {
        "n_estimators": [100, 300, 500],
        "min_samples_leaf": [1, 2, 3],
        "criterion": ["entropy"]
      }
    },
    {
      "id": "svm",
      "params": {
        "kernel": ["linear", "poly", "rbf"],
        "gamma": ["NA", 1, 2, 5],
        "C": [1, 5, 10],
        "degree": ["NA", 2, 3]
      },
      "omit_combinations": [
        {"prime_param":{"kernel": "linear"}, "combs":{"gamma":"NA", "degree":"NA"}},
        {"prime_param":{"kernel": "rbf"}, "combs": {"degree": "NA"}}
      ]
    },
    {
      "id": "knn",
      "params": {
        "n_neighbors": [5, 15, 20]
      }
    }
  ]

}