{
  "settings": {
    "repetitions": 10,
    "test_size": 0.2,
    "k": 5
  },

  "datasets": {
    "d1": {
      "dataset_path": "datasets/synthetic/hics/dimexp/g1dmin4dmax5/ocluster5/hics_80_g1_dmin4_dmax5.csv",
      "target": "is_anomaly"
    }
  },

  "metrics": [
    "roc_auc"
    
  ],

  "variable_selection": {
    "none": {
      "params": {}
    },

    "ses": {
      "params": {
        "max_k": [2, 3, 4, 5],
        "alpha": [0.05, 0.1, 0.2]
       }
    },

    "lasso": {
      "params":{
        "alpha": [0.001, 0.002]
      }
    }
  },

  "classifiers": {
    "rf": {
      "params": {
        "n_estimators": [100, 300, 500],
        "min_samples_leaf": [1, 2, 3],
        "criterion": ["entropy"]
      }
    },

    "svm": {
      "params": {
        "kernel": ["linear", "poly", "rbf"],
        "gamma": ["NA", 1, 2, 5],
        "C": [1, 5, 10],
        "degree": ["NA", 2, 3]
      },
      "omit_combinations": [
        {"prime_param":{"kernel": "linear"}, "combs":{"gamma":"NA", "degree":"NA"}},
        {"prime_param":{"kernel": "rbf"}, "combs": {"degree": "NA"}}
      ]
    },

    "knn": {
      "params": {
        "n_neighbors": [5, 10, 15]
      }
    }
  }

}