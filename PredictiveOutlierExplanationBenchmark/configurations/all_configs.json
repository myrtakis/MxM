{
  "datasets": {
    "d1": {
      "dataset_path": "datasets/breast_lof_031_010.csv",
      "target": "is_anomaly"
    }
  },

  "metrics": [
    "roc_auc",
    "avep"
  ],

  "variable_selection": {
    "none": {
      "params": {}
    },

    "ses": {
      "params": {
        "max_k": [2, 3, 4, 5],
        "alpha": [0.05, 0.1, 0.2]
       }
    },

    "lasso": {
      "params":{
        "alpha": [0.001, 0.005, 0.1]
      }
    }
  },

  "classifiers": {
    "rf": {
      "params": {
        "n_estimators": [100, 300, 500],
        "min_samples_leaf": [1, 2, 3],
        "criterion": ["entropy"]
      }
    },

    "iforest": {
      "params": {
        "n_estimators": [100, 300, 500],
        "max_samples": [64, 128, 256]
      }
    },

    "svm": {
      "params": {
        "kernel": ["linear", "poly", "rbf"],
        "gamma": ["auto"]
      }
    }
  }

}